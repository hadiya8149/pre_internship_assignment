<odoo>
    <record id="property_tags_action" model="ir.actions.act_window">
        <field name="name">Property tags</field>
        <field name="res_model">property.tag</field>
          <field name="type">ir.actions.act_window</field>

        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="property_tag_view_tree">
        <field name="name">property_tags.tree</field>
        <field name="model">property.tag</field>
        <field name="priority" eval="16"> </field>
        <field name="arch" type="xml">
            <tree string="Property Tags" editable="bottom">
                        <field name="name" />

            </tree>
        </field>

    </record>
</odoo>