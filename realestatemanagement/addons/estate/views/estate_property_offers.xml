<odoo>
    <record model="ir.ui.view" id="property_offer_tree_view">
        <field name="name">property_offer_tree.view</field>
        <field name="model">estate.property.offer</field>
        <field name="priority" eval="16"> </field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id" />
                <field name="price"/>

                  <button name="refuse_offer" string="Refuse" type="object"/>
                <button name="accept_offer" string="Accept" type="object"/>
                <field name="status"/>

            </tree>
        </field>
    </record>
</odoo>